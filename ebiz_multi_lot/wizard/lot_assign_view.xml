<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wiz_add_lot_lines" model="ir.ui.view">
            <field name="name">wiz.add.lot.lines</field>
            <field name="model">lot.wizard</field>
            <field name="arch" type="xml">
                <form string="Add stock Lot Lines">
                    <sheet>
                        <group>
                            <group>
                                <field name="check"/>
                            </group>
                            <field name="lot_id">
                                <tree editable="bottom">
                                    <field name='is_active_line'/>
                                    <field name='company_id' invisible="True"/>
                                    <field name='product_id'/>
                                    <field name='name'/>
                                    <field name='available_quantity'/>
                                    <field name='product_qty'/>
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <button name="add_lot_lines" string="Add Lot" type="object" class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_add_lot_lines" model="ir.actions.act_window">
            <field name="name">Add Lot Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lot.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wiz_add_lot_lines"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>