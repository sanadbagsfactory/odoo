<odoo>
    <data>
        <record id="email_template_rfq_custom" model="mail.template">
            <field name="name">RFQ : Request For Quotation</field>
            <field name="model_id" ref="purchase_tender_management.model_purchase_requisition"/>
            <field name="subject">{{object.company_id.name}} about RFQ : {{ object.name or 'n/a' }}</field>
            <!--            <field name="partner_to">{{ object.vendor_id.id }}</field>-->
            <!--            <field name="email_to">{{ ','.join(object.vendor_ids.mapped('email'))}}</field>-->
            <field name="email_to">{{ object.email_ids }}</field>
            <field name="description">Sent manually to vendor to request a quotation</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello Vendors
                        <span style="font-weight:bold;" t-out="object.name or ''">P00015</span>
                        <br/>
                        <br/>
                        We have a new RFQ for you from <t t-out="object.company_id.name or ''">YourCompany</t>.
                        Please have look and give your best quote on it.
                        <br/>
                        <br/>
                        Please find the attachment RFQ document.
                        <br/>
                        <br/>
                        Best regards,
                        <t t-if="not is_html_empty(object.user_id.signature)">
                            <br/>
                            <br/>
                            <t t-out="object.user_id.signature or ''">--<br/>Mitchell Admin
                            </t>
                        </t>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="purchase_tender_management.rfq_report_tender_id"/>
            <field name="report_name">RFQ_{{ (object.name or '').replace('/','_') }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>